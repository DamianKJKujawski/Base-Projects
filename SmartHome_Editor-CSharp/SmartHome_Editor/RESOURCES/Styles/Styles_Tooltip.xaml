<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">



    <Style x:Key="Style_Tooltip_Window" TargetType="{x:Type ToolTip}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToolTip}">
                    <Border Background="#F4FFFFFF" CornerRadius="3" Margin="10">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="10" Direction="-90" ShadowDepth="4"/>
                        </Border.Effect>

                        <TextBlock Text="{TemplateBinding Content}" Margin="5" Padding="9 4 9 4"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



</ResourceDictionary>